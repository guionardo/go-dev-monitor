    "version": "0.2.0",
    "configurations": [
        {
            "name": "Agent: add",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/gdm/main.go",
            "args": [
                "agent",
                "add",
                "/home/guionardo/dev"
            ]
        },
        {
            "name": "Agent: install",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/gdm/main.go",
            "args": [
                "agent",
                "install",
                "--log",
                "${workspaceFolder}/gdm.log"
            ]
        },
        {
            "name": "Agent: cron",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/gdm/main.go",
            "args": [
                "agent",
                "cron",
                "--log",
                "${workspaceFolder}/gdm.log",
                "--debug"
            ]
        },
        {
            "name": "Agent: run",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/gdm/main.go",
            "args": [
                "agent",
                "run",
            ]
        },
        {
            "name": "Server: run",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/gdm/main.go",
            "args": [
                "serve",
                "--debug",
            ]
        },
        {
            "name": "Show: run",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/gdm/main.go",
            "args": [
                "show",
                "--debug",
                "--log",
                "./gdm.log"
            ]
        }
    ]
}
